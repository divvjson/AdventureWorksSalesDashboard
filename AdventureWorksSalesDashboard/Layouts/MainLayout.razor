@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudDrawer @bind-Open="@IsOpen" Elevation="1">
        <DrawerContent OnClose="@CloseDrawer" />
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    public bool IsOpen { get; set; } = true;

    public void CloseDrawer()
    {
        IsOpen = false;
    }
}
