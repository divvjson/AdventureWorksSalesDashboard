@inherits LayoutComponentBase
@inject DrawerService DrawerService

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudDrawer @bind-Open="@DrawerService.IsOpen" Elevation="1">
        <DrawerContent />
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    protected override void OnInitialized()
    {
        DrawerService.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        DrawerService.OnChange -= StateHasChanged;
    }
}
